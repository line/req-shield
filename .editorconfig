root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
max_line_length=140
insert_final_newline = true

[*.{kt,kts}]
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
indent_style = space
indent_size = 4